{
    "manifest_version": 3,
    "name": "GPT Evaluator",
    "version": "1.0.0",
    "description": "Evaluate AI responses using multiple providers",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://api.openai.com/*",
        "https://api.anthropic.com/*",
        "https://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.chatgpt.com/*"
            ],
            "js": [
                "src/content-scripts/gpt-monitor.ts"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*.chatgpt.com/*"
            ],
            "js": [
                "src/content-scripts/evaluation-tooltip.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "public/favicon/favicon-16x16.png",
        "32": "public/favicon/favicon-32x32.png",
        "96": "public/favicon/favicon-96x96.png"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "**/*"
            ],
            "use_dynamic_url": false
        }
    ]
}